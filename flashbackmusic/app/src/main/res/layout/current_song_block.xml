<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:layout_marginBottom="50dp"
    android:id="@+id/current_song_block"
    android:gravity="center_vertical"
    android:background="#ffcecece"
    android:translationZ="0.0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:id="@+id/current_song_title"
        android:text="Sample song"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:background="#ffcecece"
        />

    <TextView
        android:id="@+id/current_song_artist"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Sample Artist"
        android:layout_marginLeft="10dp"/>


    <TextView
        android:id="@+id/current_song_album"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Sample Album"
        android:layout_marginLeft="10dp"/>

    <ImageButton
        android:id="@+id/song_playPause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="-60dp"
        android:layout_marginRight="80dp"
        android:src="@android:drawable/ic_media_pause" />

    <ImageButton
        android:id="@+id/current_song_favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="-45dp"
        android:layout_marginRight="10dp"
        android:src="@android:drawable/ic_input_add" />

    <TextView
        android:id="@+id/song_history_description"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:text="You're listening from San Diego on a Saturday morning."
        android:layout_marginLeft="10dp"/>

</LinearLayout>