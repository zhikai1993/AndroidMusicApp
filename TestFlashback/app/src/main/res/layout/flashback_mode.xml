<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/flashback_mode"
    android:gravity="top">

    <Button
        android:id="@+id/flashback_disable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Turn Flashback Mode Off"
        android:layout_margin="6dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:id="@+id/flashback_playPause"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:drawable/ic_media_pause"
            android:layout_gravity="center"
            android:layout_margin="20dp"/>

        <ImageButton
            android:id="@+id/flashback_song_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_input_add"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="-100dp"/>

        <TextView
            android:id="@+id/flashback_song_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sample song"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/flashback_song_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sample Artist"
            android:textSize="16dp"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/flashback_song_album"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sample Album"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/flashback_history_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="You're listening from San Diego on a Saturday morning."
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textStyle="italic"/>

    </LinearLayout>

</LinearLayout>